<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avvia Receiver"
        android:id="@+id/bt_start_receiver"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="doLaunchReceiver"/>

    <Button
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/bt_play"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/bt_start_receiver"
        android:layout_centerHorizontal="true"
        android:onClick="doPlay"/>

    <Button
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pausa"
        android:id="@+id/bt_pause"
        android:layout_below="@+id/bt_play"
        android:layout_alignLeft="@+id/bt_play"
        android:layout_alignStart="@+id/bt_play"
        android:layout_marginTop="55dp"
        android:onClick="doPause"/>

    <Button
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="termina receiver"
        android:id="@+id/bt_halt_receiver"
        android:layout_below="@+id/bt_pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="doLeaveReceiver"/>
</RelativeLayout>
